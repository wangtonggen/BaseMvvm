<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--checkBox 主题颜色-->
    <style name="theme_checkbox" parent="android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/color_check_normal</item>
        <item name="colorControlActivated">@color/color_check_selected</item>
    </style>

    <!--switch 主题颜色-->
    <style name="theme_switch" parent="android:style/Widget.Material.CompoundButton.Switch">
        <item name="colorControlNormal">@color/color_check_normal</item>
        <item name="colorControlActivated">@color/color_check_selected</item>
    </style>

    <!--switch 主题颜色-->
    <style name="theme_RadioButton" parent="android:style/Widget.Material.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/color_check_normal</item>
        <item name="colorControlActivated">@color/color_check_selected</item>
    </style>


</resources>
